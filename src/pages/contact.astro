---
import Base from "../layouts/base.astro";
import { pages } from "../configs/pages";
---

<Base>
  <main class="max-w-6xl mx-auto px-4 py-16 flex flex-col gap-8 md:gap-16">
    <section>
      <h2 class="font-doto text-lg mb-2">
        <span data-notation="box" data-notation-color="#e62753">TrustD</span>
      </h2>
      <h1 class="font-doto text-2xl mb-4">
        No-Nonsense
        <a class="hover:cursor-pointer" href={pages.license.path}
          ><span
            class="mx-2"
            data-notation="bracket"
            data-notation-color="#aaaaff"
            data-notation-hover-color="#6666ff">Source Available</span
          ></a
        >
        <a class="hover:cursor-pointer" href={pages.about.path}
          ><span class="mx-2">Universal Access Control</span></a
        >
        <br />
        <a class="hover:cursor-pointer" href={pages.audit.path}
          ><span
            class="mx-2"
            data-notation="underline"
            data-notation-color="#52387b88"
            data-notation-hover-color="#52387b">Governance</span
          ></a
        >
        and
        <a class="hover:cursor-pointer" href={pages.secure.path}
          ><span
            class="mx-2"
            data-notation="underline"
            data-notation-color="#9e405888"
            data-notation-hover-color="#9e4058">Enforcement</span
          ></a
        >
      </h1>
    </section>
    <section>
      <h1 class="text-2xl font-doto">Contact Us</h1>
      <p class="text-lg">
        We are always happy to hear from you! Whether you have questions,
        feedback, or just want to say hello, feel free to reach out.
      </p>
      <ul class="flex-col flex gap-4 py-8 px-2">
        <li>
          <a
            href="https://calendar.trustd.com"
            class="flex items-center hover:underline"
          >
            <svg
              xmlns="https://www.w3.org/2000/svg"
              class="inline-block w-6 h-6 mr-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M8 3V5M16 3V5M3 9H21M5 7H19C20.1046 7 21 7.89543 21 9V19C21 20.1046 20.1046 21 19 21H5C3.89543 21 3 20.1046 3 19V9C3 7.89543 3.89543 7 5 7Z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M7 13H9M11 13H13M15 13H17M7 17H9M11 17H13M15 17H17"></path>
            </svg>
            <span
              class="px-1"
              data-notation="highlight"
              data-notation-color="#e6275333"
              data-notation-hover-color="#e6275388">Schedule a Meeting</span
            >
          </a>
        </li>
        <li>
          <a
            href="mailto:vaishnav@trustd.sh"
            class="flex items-center hover:underline"
          >
            <svg
              xmlns="https://www.w3.org/2000/svg"
              class="inline-block w-6 h-6 mr-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M16.5 3.5H7.5C5.01472 3.5 3 5.51472 3 8V16C3 18.4853 5.01472 20.5 7.5 20.5H16.5C18.9853 20.5 21 18.4853 21 16V8C21 5.51472 18.9853 3.5 16.5 3.5Z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.5 8L12 13L20.5 8"></path>
            </svg>
            <span
              class="px-1"
              data-notation="underline"
              data-notation-color="#e62753"
              >Email:
            </span><span>vaishnav@trustd.sh</span>
          </a>
        </li>
        <li>
          <a href="tel:+1234567890" class="flex items-center hover:underline">
            <svg
              xmlns="https://www.w3.org/2000/svg"
              class="inline-block w-6 h-6 mr-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 5C3 4.44772 3.44772 4 4 4H6C6.55228 4 7 4.44772 7 5V7C7 7.55228 6.55228 8 6 8H5C5 11.3137 7.68629 14 11 14V13C11.5523 13 12 12.5523 12 12V10C12 9.44772 11.5523 9 11 9H9C8.44772 9 8 8.55228 8 8V6C8 5.44772 8.44772 5 9 5H11C11.5523 5 12 4.44772 12 4V3C12 2.44772 11.5523 2 11 2H4C3.44772 2 3 2.44772 3 3V5Z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 10C15 10.5523 15.4477 11 16 11H17C17.5523 11 18 11.4477 18 12V14C18 14.5523 17.5523 15 17 15H16C16 18.3137 18.6863 21 22 21V20C22.5523 20 23 19.5523 23 19V17C23 16.4477 22.5523 16 22 16H20C19.4477 16 19 15.5523 19 15V13C19 12.4477 19.4477 12 20 12H22C22.5523 12 23 11.5523 23 11V10C23 9.44772 22.5523 9 22 9H15C14.4477 9 14 9.44772 14 10V11C14 11.5523 14.4477 12 15 12H16C16.5523 12 17 12.4477 17 13V15C17 15.5523 16.5523 16 16 16H15C15 19.3137 17.6863 22 21 22V21C21.5523 21 22 20.5523 22 20V18C22 17.4477 21.5523 17 21 17H19C18.4477 17 18 16.5523 18 16V14C18 13.4477 18.4477 13 19 13H21C21.5523 13 22 12.5523 22 12V11C22 10.4477 21.5523 10 21 10H15Z"
              ></path>
            </svg>
            <span
              class="px-1"
              data-notation="underline"
              data-notation-color="#e62753"
              >Phone:
            </span><span>+1 (224) 578-4995</span>
          </a>
        </li>
      </ul>
    </section>
  </main>
</Base>
