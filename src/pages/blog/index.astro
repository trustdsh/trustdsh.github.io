---
import Base from "../../layouts/base.astro";
import CompanyTagline from "../../components/CompanyTagline.astro";
---

<Base title="Blog">
  <main class="max-w-6xl mx-auto px-4 py-16 flex flex-col gap-8 md:gap-16">
    <section>
      <CompanyTagline />
    </section>
    <section>
      <img
        src="/logos/playful.png"
        alt="A Playful Patcha"
        class="h-32 md:ml-4"
      />
      <h1 class="text-2xl">😖️ Blog Coming Soon!</h1>
      <h3 class="text-lg">
        We know you're disappointed, so enjoy this XKCD Comic instead:
      </h3>
      <a
        href="https://xkcd.com/741"
        target="_blank"
        referrerpolicy="no-referrer"
        ><img
          src="https://imgs.xkcd.com/comics/blogging.png"
          alt="xkcd comic about manuals"
          class="w-full max-w-2xl"
        /></a
      >
    </section>
  </main>
</Base>
